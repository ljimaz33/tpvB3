<PedidoController>:
    lista: _lista
    btnPedido: _btnPedido
    btnAtras: _btnAtras
    botonera: _botonera
    orientation: 'horizontal'
    spacing: 10
    size_hint: .95, .95
    GridButtons:
        size_hint_x: .6
        cols: 4
        onPress: root.onPress
        font_size_title: "40dp"
        font_size: "20dp"
        fgColor: "#FFFFFF"
        id: _botonera
    BoxLayout:
        spacing: 5
        size_hint_x: .4
        orientation: 'vertical'
        LabelColor:
            bgColor: "#000000"
            size_hint_y: .15
            font_size: "20dp"
            text: root.des
            color: "#ffffff"
        ValleListView:
            cheight: "30dp"
            id: _lista
            bgColor: "#000000"
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0,0,0,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'horizontal'
            size_hint_y: .15
            Label:
                font_size: 35
                text: 'Total:'
            Label:
                font_size: 35
                text: "{0:.2f} â‚¬".format(root.total)
        BoxLayout:
            size_hint_y: .15
            Button:
                id: _btnPedido
                size_hint_x: .7
                text: 'Hacer Pedido'
                on_press: root.hacer_pedido()
            Button:
                size_hint_x: .3
                id: _btnAtras
                text: 'Atras'
                on_press: root.atras()
        BoxLayout:
            size_hint_y: .15
            ButtonColor:
                font_size: "15dp"
                text: 'Cancelar el pedido'
                on_press: root.tpv.mostrar_inicio()
            ButtonColor:
                font_size: "15dp"
                id: _btnAparcar
                text: 'Aparcar pedio'
                on_press: root.aparcar_pedido()
