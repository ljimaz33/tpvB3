<TextGrande@TextInput>:
    font_size: 50

<Find>:
    anchor_x: 'center'
    anchor_y: 'center'
    txt: _txtTlf
    BoxLayout:
        spacing: 10
        size_hint: .5, None
        height: 70
        TextGrande:
            hint_text: 'Telefono'
            id: _txtTlf
        Button:
            size_hint_x: .2
            text: "Aceptar"
            on_press: root.aceptar(_txtTlf.text)
        Button:
            size_hint_x: .2
            text: "Salir"
            on_press: root.salir()


<Clientes>:
    anchor_x: 'center'
    anchor_y: 'center'
    tlf: _tlf
    nombre: _nombre
    dir: _dir
    notas: _notas
    list: _list
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint: .8, .8
        BoxLayout:
            size_hint_y: None
            height: 70
            TextGrande:
                size_hint_x: .4
                hint_text: "Telefono"
                id: _tlf
            TextGrande:
                hint_text: "Nombre"
                id: _nombre
        BoxLayout:
            size_hint_y: None
            height: 100
            TextGrande:
                font_size: 35
                size_hint_x: .7
                hint_text: str("Direcci√≥n").decode('utf-8')
                id: _dir
            ButtonImg:
                id: _btnAdd
                on_press: root.add_dir()
        ValleListView:
            size_hint_y: .4
            id: _list
        TextGrande:
            size_hint_y: .3
            hint_text: "Notas"
            id: _notas
        BoxLayout:
            size_hint_y: .2
            Button:
                text: "Pedir"
                on_press: root.pedir(root.tlf.text)
            Button:
                text: "Guardar cliente"
                on_press: root.guardar()
            Button:
                text: "Cancelar"
                on_press: root.salir()
