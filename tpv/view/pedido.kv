#:import Botonera valle.component.botonera.Botonera
#:import LabelColor valle.component.labelcolor.LabelColor
#:import CustomListView valle.component.listview.CustomListView
<PedidoController>:
    lista: _lista
    btnPedido: _btnPedido
    btnAtras: _btnAtras
    botonera: _botonera
    orientation: 'horizontal'
    spacing: 5
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint_x: .6
        Botonera:
            size_hint: .9, .9
            completo: False
            onPress: root.onPress
            font_size: 20
            id: _botonera
    BoxLayout:
        spacing: 5
        padding: 5
        size_hint_x: .4
        orientation: 'vertical'
        LabelColor:
            bColor: "#000000FF"
            size_hint_y: .1
            text: root.des
        CustomListView:
            id: _lista
            bColor: "#000000FF"
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0,0,0,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                font_size: 35
                text: 'Total:'
            Label:
                font_size: 35
                text: "{0:.2f} â‚¬".format(root.precio)
        BoxLayout:
            size_hint_y: .15
            Button:
                id: _btnPedido
                size_hint_x: .7
                text: 'Hacer Pedido'
                on_press: root.hacer_pedido()
            Button:
                size_hint_x: .3
                id: _btnAtras
                text: 'Atras'
                on_press: root.atras()
        BoxLayout:
            size_hint_y: .1
            Button:
                text: 'Cancelar el pedido'
                on_press: root.tpv.mostrar_inicio()
