<Sugerencias>:
    lista: _lista
    txtSug: _txtInput
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: root.size
            pos: root.pos
    des: 'Descrpicion'
    AnchorLayout:
        anchor_y: 'center'
        anchor_x: 'center'
        GridLayout:
            cols: 1
            padding: 20
            size_hint: .9, .9
            BoxLayout:
                spacing: 5
                orientation: 'horizontal'
                BoxLayout:
                    orientation: "vertical"
                    spacing: 5
                    Label:
                        text: "Sugerencias"
                        size_hint_y: None
                        height: 40
                        font_size: 30
                        color: 0, 0, 0, 1
                    ValleListView:
                        id: _lista
                        bColor: "#FFFFFF"
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'top'
                    size_hint_x: .45
                    GridLayout:
                        cols: 1
                        spacing: 5
                        size_hint_y: None
                        height: len(self.children) * 90
                        Label:
                            text: "Descrpicion"
                            size_hint_y: None
                            height: 40
                            font_size: 30
                            color: 0,0,0,1
                        LabelColor:
                            bgColor: '#333333'
                            height: 90
                            text: root.des
                            font_size: '24dp'
                            color: '#ffffff'
                            text_size: self.size
                            halign: 'left'
                            valign: 'middle'
                        TextInput:
                            size_hint_y: None
                            id: _txtInput
                            text: root.texto
                            font_size: 30
                        Button:
                            size_hint_y: None
                            text: "Salir"
                            on_press: root.exit()
