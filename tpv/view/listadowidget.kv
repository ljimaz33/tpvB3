#:import CustomListView valle.component.listview.CustomListView
#:import LabelColor valle.component.labelcolor.LabelColor
<ListadoWidget>:
    pedido: _pedido
    lista: _listado_pedidos
    precio: 0
    anchor_x: 'center'
    anchor_y: 'center'
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        size_hint: .9, .9
        BoxLayout:
            size_hint_x: .6
            orientation: 'vertical'
            LabelColor:
                bColor: "#FFFFFF"
                text: "Lista de pedidos"
                size_hint_y: .1
                color: 0, 0, 0, 1
            CustomListView:
                id: _listado_pedidos
                bColor: "#FFFFFF"
        BoxLayout:
            spacing: 5
            padding: 5
            size_hint_x: .4
            orientation: 'vertical'
            LabelColor:
                bColor: "#000000"
                size_hint_y: .1
                text: root.des
            CustomListView:
                id: _pedido
                bColor: "#000000"
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                orientation: 'horizontal'
                size_hint_y: .1
                Label:
                    font_size: 35
                    text: 'Total:'
                Label:
                    font_size: 35
                    text: "{0:.2f} â‚¬".format(root.precio)
            BoxLayout:
                size_hint_y: .2
                Button:
                    id: _btnPedido
                    size_hint_x: .4
                    text: 'Pedido'
                    on_press: root.imprimir()
                Button:
                    id: _btnTicket
                    size_hint_x: .4
                    text: 'Ticket'
                    on_press: root.imprimirTk()
                Button:
                    size_hint_x: .2
                    id: _btnAtras
                    text: 'Salir'
                    on_press: root.salir()
