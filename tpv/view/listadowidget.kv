<ListadoWidget>:
    pedido: _pedido
    lista: _listado_pedidos
    precio: 0
    anchor_x: 'center'
    anchor_y: 'center'
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        size_hint: .9, .9
        BoxLayout:
            size_hint_x: .6
            orientation: 'vertical'
            spacing: 5
            LabelColor:
                bgColor: "#000000"
                text: "Lista de pedidos"
                size_hint_y: None
                height: "70dp"
                color: '#ffffff'
                border_size: 0
            ValleListView:
                id: _listado_pedidos
                bgColor: "#000000"
        BoxLayout:
            spacing: 5
            size_hint_x: .4
            orientation: 'vertical'
            LabelColor:
                bgColor: "#000000"
                size_hint_y: None
                height: "70dp"
                text: root.des
                color: '#ffffff'
            ValleListView:
                id: _pedido
                bgColor: "#000000"
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                orientation: 'horizontal'
                size_hint_y: .1
                Label:
                    font_size: 35
                    text: 'Total:'
                Label:
                    font_size: 35
                    text: "{0:.2f} â‚¬".format(root.precio)
            BoxLayout:
                size_hint_y: .2
                ButtonColor:
                    id: _btnPedido
                    size_hint_x: .4
                    text: 'Pedido'
                    on_press: root.hacer_pedido()
                ButtonColor:
                    id: _btnTicket
                    size_hint_x: .4
                    text: 'Ticket'
                    on_press: root.imprimirTk()
                ButtonIcon:
                    size_hint_x: .2
                    id: _btnAtras
                    icon: res.FA_EXIT
                    on_press: root.salir()
