<TextSize@TextInput>:
    font_size: 20
<Arqueo>:
    conteo: _conteo
    gastos: _gastos
    cambio: _cambio.text
    anchor_x: 'center'
    anchor_y: 'center'
    BoxLayout:
        size_hint: .9, .9
        spacing: 10
        GridLayout:
            cols: 1
            size_hint_x: .2
            spacing: 20
            GridLayout:
                cols: 1
                spacing: 10
                size_hint_y: .4
                TextSize:
                    id: _can
                    size_hint_y: .2
                    hint_text: "Candidad monedas"
                TextSize:
                    id: _tipo
                    size_hint_y: .2
                    hint_text: "Tipo de moneda"
                Button:
                    size_hint_y: .6
                    text: 'Agregar conteo'
                    on_press: root.add_conteo(_can, _tipo)
            GridLayout:
                cols: 1
                spacing: 10
                size_hint_y: .4
                TextSize:
                    id: _des
                    size_hint_y: .2
                    hint_text: str("Descripci√≥n gasto").decode('utf-8')
                TextSize:
                    id: _gasto
                    size_hint_y: .2
                    hint_text: "Importe de gasto"
                Button:
                    size_hint_y: .6
                    text: 'Agregar gasto'
                    on_press: root.add_gasto(_des, _gasto)
            TextSize:
                id: _cambio
                size_hint_y: .05
                hint_text: "Cambio remanente"
                text: "200"
            BoxLayout:
                size_hint_y: .15
                Button:
                    text: "Arqueo"
                    on_press: root.arquear()
                Button:
                    text: "Salir"
                    on_press: root.tpv.mostrar_inicio()
        GridLayout:
            cols: 1
            size_hint_x: .4
            Label:
                text: "Listado de monedas"
                color: 0, 0, 0, 1
                size_hint_y: .1
                font_size: 25
            ValleListView:
                size_hint_y: .9
                id: _conteo

        GridLayout:
            size_hint_x: .4
            cols: 1
            Label:
                text: "Lista de gastos"
                color: 0, 0, 0, 1
                font_size: 25
                size_hint_y: .1
            ValleListView:
                size_hint_y: .9
                id: _gastos
